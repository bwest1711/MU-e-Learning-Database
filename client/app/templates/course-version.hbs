<div class="row">
  <div class="col-md-3">
  {{#link-to "courseVersions" class="strong"}}
  &lt; Go to course versions
  {{/link-to}}
  <hr>
  <h3>Version Actions</h3>
  <br>
  {{mail-to instructor.email "Email course author"}}<br><br>
  <a class="action-link" {{action "deleteModel"}}>Delete this course version</a><br><br>
  </div>
  <div class="col-md-9" style="border-left: 1px solid #EEE;">

    {{edit-field bigField=true editable=false name="Course" value=course.title
        link-to=course route="course"}}

    {{edit-field bigField=true editable=false name="Author" value=instructor.fullName
        link-to=instructor route="instructor"}}

    {{edit-field bigField=true editable=false name="Email" value=instructor.email}}

    {{edit-field action="saveModel" bigField=true editable=true name="Label" value=label}}

    <br>

    {{edit-field action="saveModel" editable=true name="Type" value=courseType}}

    {{edit-field action="saveModel" editable=true boolean=true name="ADA Compliant" value=adaCompliant}}

    {{edit-field action="saveModel" editable=true boolean=true name="Copyright Compliant" value=copyrightCompliant}}

    <br>

    <strong>Due for review on: </strong>
    {{#if neverReviewed}}
    <span class="text-muted">[Never reviewed]</span>
    {{else}}
    <span>{{to-short-date dueForReviewDate}}</span>
    {{/if}}

    <br><br>

    {{#if isUnderReview}}
      {{quality-review-timeline action="finalizeReview"}}
    {{else}}
    <button class="btn btn-primary btn-lg" {{action "startReview"}}>Begin compliance review</button>
    {{/if}}

    <br>
    <br>

    <h4>Past Compliance Reviews</h4>
    <table class="table table-bordered">
      <tr>
        <th>Date Started</th>
        <th>Date Finished</th>
        <th>Notes and Attachments</th>
      </tr>
      {{#each qr in qualityReviews}}
      <tr>
        <td>{{to-short-date qr.startDate}}</td>
        <td>{{to-short-date qr.endDate}}</td>
        <td><a href="">View ></a></td>
      </tr>
      {{else}}
      <tr>
        <td class="empty-collection-row" colspan=3>No compliance reviews for this version</td>
      </tr>
      {{/each}}
    </table>

    <h4>Course Sections</h4>
    <table class="table table-bordered">
      <tr>
        <th>CRN</th>
        <th>Instructor</th>
        <th>Semester</th>
      </tr>
      {{#each cs in courseSections}}
      <tr>
        <td><strong>{{#link-to "courseSection" cs}}{{cs.crn}}{{/link-to}}</strong></td>
        <td>{{cs.instructor.fullName}}</td>
        <td>{{cs.semester}}</td>
      </tr>
      {{else}}
      <tr>
        <td class="empty-collection-row" colspan=2>No course sections for this version</td>
      </tr>
      {{/each}}
    </table>
  </div>
</div>

{{outlet}}
