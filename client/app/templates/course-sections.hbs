<h2>Course Sections</h2>

<table class="table table-striped table-bordered">
  <tr>
    <th class="col-sm-1">CRN</th>
    <th class="col-sm-3">Section</th>
    <th class="col-sm-2">Instructor</th>
    <th class="col-sm-1">Semester</th>
    <th class="col-sm-2">Compliance Attested</th>
    <th class="col-sm-2">Compliance Due On</th>
  </tr>
{{#each cs in model}}
<tr>
  <td>{{cs.crn}}</td>
  <td>
    {{#link-to 'courseSection' cs}}
    {{cs.courseVersion.course.department.abbreviation}}{{cs.courseVersion.course.number}} - {{cs.courseVersion.labelDisplay}}
    {{/link-to}}
  </td> 
  <td>{{cs.instructor.fullName}}</td>
  <td>{{cs.semester}}</td>
  <td {{bind-attr class="cs.attested:text-success:text-danger"}}>
    {{#if cs.attested}}
    <span class="glyphicon glyphicon-check"></span> {{to-yes-no cs.attested}}
    {{else}}
    <span class="glyphicon glyphicon-remove"></span> {{to-yes-no cs.attested}}
    {{/if}}
  </td>
  <td>
    <span {{bind-attr class="cs.attested:text-success"}}>
      {{to-short-date cs.attestedDueDate}}
    </span>
  </td>
</tr>
{{/each}}
{{outlet}}
</table>
