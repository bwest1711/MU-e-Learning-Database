<tr>
  <th>Dept.</th>
  <th>Number</th>
  <th>Title</th>
  <th></th>
</tr>
<tr>
  <td>
    {{ember-selectize 
    content=departments 
    optionValuePath="content" 
    optionLabelPath="content.abbreviation"
    value=selectedDepartment}}
  </td>
  <td>
    {{input type="text" placeholder="#" value=courseNumber}}
  </td>
  <td>
    {{input type="text" placeholder="Title" value=courseTitle}}
  </td>
  <td></td>
</tr>
<tr>
  <td style="text-align:center" colspan=4>
    <button class="btn btn-primary" {{action "create"}}>Create</button>
    {{#link-to "courses.index" classNames="btn btn-default"}}Cancel{{/link-to}}
  </td>
</tr>
