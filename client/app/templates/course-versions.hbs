<h2>Course Versions</h2>
{{#data-table}}
	<table class="table table-striped table-bordered">
		<thead>
			<tr>
				<th class="col-sm-3">Course Version</th>
				<th class="col-sm-2">Author</th>
				<th class="col-sm-1">Course</th>
				<th class="col-sm-2">Latest Review</th>
				<th class="col-sm-1">Copyright Compliant</th>
				<th class="col-sm-1">ADA Compliant</th>
			</tr>
		</thead>
		<tbody>
			{{#each model.courseVersions as |cv|}}
				<tr>
					<td>
						<strong>
							{{#link-to 'courseVersion' cv}}
								{{cv.labelDisplay}}
							{{/link-to}}
						</strong>
					</td> 
					<td>{{cv.instructor.fullName}}</td>
					<td>{{cv.course.department.abbreviation}} {{cv.course.number}}</td>
					<td>
						{{#if cv.neverReviewed}}
							<span class="text-danger"><span class="glyphicon glyphicon-remove"></span> Never</span> 
						{{else}}
							{{#if cv.dueForReview}}
								<span class="glyphicon glyphicon-remove text-danger"></span>
							{{/if}}
							<span class="{{if cv.dueForReview '' 'text-danger'}}">
								{{to-short-date cv.latestReview}}
							</span>
						{{/if}}
					</td>
					<td class="{{if cv.copyrightCompliant 'text-success' 'text-danger'}}">{{to-yes-no cv.copyrightCompliant}}</td>
					<td class="{{if cv.adaCompliant 'text-success' 'text-danger'}}">{{to-yes-no cv.adaCompliant}}</td>
				</tr>
			{{/each}}
		</tbody>
	</table>
{{/data-table}}