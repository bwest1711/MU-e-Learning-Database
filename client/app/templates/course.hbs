<div class="row">
<div class="col-md-3">
<strong>
{{#link-to 'courses' class="strong"}}
< Go to course catalog
{{/link-to}}
</strong>
<hr>
<h3>Course Actions</h3>
<br>
{{#link-to 'courses'}}Delete this course{{/link-to}}
</div>
<div class="col-md-9" style="border-left: 1px solid #EEE;">
  <h2>{{display}}</h2>
  <br>
  <h4>Course Versions</h4>
  <table class="table table-bordered">
    <tr>
      <th>Instructor</th>
      <th>Label</th>
      <th>Sections</th>
    </tr>
    {{#each cv in courseVersions}}
    <tr>
      <td>{{#link-to 'instructor' cv.instructor}}{{cv.instructor.fullName}}{{/link-to}}</td>
      <td>{{#link-to 'courseVersion' cv}}{{cv.labelDisplay}}{{/link-to}}</td>
      <td>{{cv.courseSections.length}}</td>
    </tr>
    {{/each}}
    <tr>
      <td colspan=3 style="text-align:center"><a>Add New Version</a></td>
    </tr>
  </table>
</div>
</div>

{{outlet}}
