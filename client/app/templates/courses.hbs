<h2>Course Catalog</h2>
<table class="table table-striped table-bordered">
  <tr>
    <th>Dept.</th>
    <th>Number</th>
    <th>Title</th>
    <th>Number of versions</th>
  </tr>
{{#each course in model}}
<tr>
  <td>{{course.department.abbreviation}}</td>
  <td>{{course.number}}</td> 
  <td><strong>{{#link-to 'course' course}}{{course.title}}{{/link-to}}</strong></td>
  <td>{{course.courseVersions.length}}</td>
</tr>
{{/each}}
<tr>
  <td colspan=4 style="text-align:center;">
    <strong><a href="#"><span class="glyphicon glyphicon-plus"></span> Add a new course</a></strong>
  </td>
</tr>
</table>

{{outlet}}
